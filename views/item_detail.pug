extends layout

block content
    div(class="main-subcontainer")
        div(class="line-item")
            h2(class="item-head") #{item.name}
            if item.image
                div(class="item-img-container")
                    img(class="item-pic" alt="pic of " + item.name src='/images/' + item.image)
            p #{item.description}
            p Price: $#{item.price}
            p(class="stock") Amount Remaining: #{item.stock}
            if item.stock < 10
              a(href="products/low")
                div(class="warning") 
                    span Running Low
            div(class="item-cat-container")
              span Category: 
              a(href=item.category.url) #{item.category.name}
            div(class="item-link-container")
                a(href=item.url + "/update") Update Item
                a(href=item.url + "/delete") Delete Item

        