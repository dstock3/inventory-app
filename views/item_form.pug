extends layout

block content
  form(method='POST' action='')
    h2 #{title}
    if title==="Update Item"
      div(class="main-subcontainer")
        div(class="item-detail-container")
            h2(class="item-head") #{item.name}
            p #{item.description}
            p #{item.price}
            p #{item.stock}
            if item.stock < 10
                span Running Low
            a(href=item.category.url) #{item.category.name}
            a(href=item.url + "/delete") Delete Item

    div.form-group
      label(for='name') Item Name:
      input#name.form-control(type='text' placeholder='Item Name' name='name' required='true' value=(undefined===name ? '' : item.name) )
      label(for='description') Description:
      input#description.form-control(type='text' placeholder='Item Description' name='description' required='true' value=(undefined===description ? '' : item.description))

    div.form-group
      label Category:
      div
        for category in category_list
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.name}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text' placeholder='Item Price' name='price' value=(undefined===price ? '' : item.price) )
      label(for='stock') Inventory Amount:
      input#stock.form-control(type='text' placeholder='Amount In Stock' name='stock' required='true' value=(undefined===stock ? '' : item.stock) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
  

