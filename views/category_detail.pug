extends layout

block content
    div(class="main-subcontainer")
        h2 #{title}
        ul(class="item-list")
        each item in item_list
            if title === item.category.name
                li(class="line-item")
                    div(class="main-item-container")
                    h3 
                        a(href=item.url) #{item.name}
                    span Price: $#{item.price}  
                    p #{item.description}
                    p Amount Remaining: #{item.stock}
                    if item.stock < 10
                        span Running Low
                    p #{item.category.name}

                