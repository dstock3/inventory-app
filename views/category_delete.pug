extends layout

block content
    div(class="main-subcontainer")
        div(class="cat-delete-container")
            h2(class="cat-detail-head") #{title}

            if items.length > 0
                p(class="cat-delete-msg warning") You must delete the following items before deleting this category.
                ul
                    for item in items
                        li 
                            a(href=item.url) #{item.name}
            else 
                div(class="confirm-delete") Are you sure you want to delete this category?
                form(method='POST' action='')
                    div.form-group
                        input#itemid.form-control(type='hidden',name='catid', required='true', value=category._id )
                        button.btn.btn-primary(type='submit') Confirm
            
            a(class="return-to-cat" href=category.url) Return to #{category.name}