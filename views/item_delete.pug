extends layout

block content
    div(class="main-subcontainer")
        div(class="line-item")
            h2(class="item-head") #{item.name}
            if item.image
                div(class="item-img-container")
                    img(class="item-pic" alt="pic of " + item.name src='/images/' + item.image)
            p #{item.description}
            p #{item.price}
            p #{item.stock}
            if item.stock < 10
                div(class="warning") 
                    span Running Low
            a(href=item.category.url) #{item.category.name}
            a(href=item.url + "/update") Update Item
        
        form(method='POST' action='')
            div.form-group
                label(class="confirm-delete") Are you sure you want to delete this item?
                input#itemid.form-control(type='hidden',name='itemid', required='true', value=item._id )
                button(class="confirm-delete-btn" type='submit') Confirm
