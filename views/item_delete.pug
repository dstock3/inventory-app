extends layout

block content
    div(class="main-subcontainer")
        div(class="item-detail-container")
            h2(class="item-head") #{item.name}
            p #{item.description}
            p #{item.price}
            p #{item.stock}
            if item.stock < 10
                span Running Low
            a(href=item.category.url) #{item.category.name}
            a(href=item.url + "/update") Update Item
        
        div(class="confirm-delete") Are you sure you want to delete this item?

        form(method='POST' action='')
            div.form-group
                input#itemid.form-control(type='hidden',name='itemid', required='true', value=item._id )
                button.btn.btn-primary(type='submit') Confirm
